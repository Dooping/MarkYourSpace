<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".newBuildingFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Name:"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewStartDateSearchSpace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Address:"
        android:id="@+id/textViewStartHourSearchSpace"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewStartDateSearchSpace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="City:"
        android:id="@+id/textViewEndDateSearchSpace"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewStartHourSearchSpace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Zip Code:"
        android:id="@+id/textViewEndHourSearchSpace"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewEndDateSearchSpace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Type:"
        android:id="@+id/textViewNumbSeatsSearchSpace"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewEndHourSearchSpace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editBuildingName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewStartDateSearchSpace"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textViewStartHourSearchSpace" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editBuildingAddress"
        android:layout_alignBottom="@+id/textViewStartHourSearchSpace"
        android:layout_toRightOf="@+id/textViewStartHourSearchSpace"
        android:layout_alignRight="@+id/editBuildingName"
        android:layout_alignEnd="@+id/editBuildingName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editBuildingCity"
        android:layout_alignBottom="@+id/textViewEndDateSearchSpace"
        android:layout_toRightOf="@+id/textViewEndDateSearchSpace"
        android:layout_alignRight="@+id/editBuildingAddress"
        android:layout_alignEnd="@+id/editBuildingAddress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editZipCode"
        android:layout_above="@+id/textViewNumbSeatsSearchSpace"
        android:layout_toRightOf="@+id/textViewEndHourSearchSpace"
        android:layout_alignRight="@+id/editBuildingCity"
        android:layout_alignEnd="@+id/editBuildingCity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editType"
        android:layout_alignBottom="@+id/textViewNumbSeatsSearchSpace"
        android:layout_toRightOf="@+id/textViewNumbSeatsSearchSpace"
        android:layout_alignRight="@+id/editZipCode"
        android:layout_alignEnd="@+id/editZipCode" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add"
        android:id="@+id/buttonAddNewBuilding"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#FFFFFF"
        android:background="#552CA3"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/buttonCancelNewBuilding"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_cancel"
        android:id="@+id/buttonCancelNewBuilding"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#FFFFFF"
        android:background="#552CA3"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
