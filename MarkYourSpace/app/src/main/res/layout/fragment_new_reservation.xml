<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nf.co.markyourspace.markyourspace.newReservation">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start Date:"
        android:layout_marginTop="20dp"
        android:id="@+id/textStartDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Start Hour:"
        android:id="@+id/textStartHour"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textStartDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="End Date:"
        android:id="@+id/textEndDate"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textStartHour"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="End Hour:"
        android:id="@+id/textEndHour"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textEndDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editStartDate"
        android:focusable="false"
        android:layout_above="@+id/textStartHour"
        android:layout_toRightOf="@+id/textStartDate"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editStartHour"
        android:focusable="false"
        android:layout_above="@+id/textEndDate"
        android:layout_toRightOf="@+id/textStartHour"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editEndDate"
        android:layout_above="@+id/textEndHour"
        android:layout_toRightOf="@+id/textEndDate"
        android:layout_alignRight="@+id/editStartDate"
        android:layout_alignEnd="@+id/editStartDate" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editEndHour"
        android:layout_alignBottom="@+id/textEndHour"
        android:layout_toRightOf="@+id/textEndHour"
        android:layout_alignRight="@+id/editEndDate"
        android:layout_alignEnd="@+id/editEndDate" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add"
        android:id="@+id/buttonAddNewBuilding"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#FFFFFF"
        android:background="#552CA3"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/buttonCancelNewBuilding"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_cancel"
        android:id="@+id/buttonCancelNewBuilding"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#FFFFFF"
        android:background="#552CA3"
        android:layout_marginBottom="29dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>