<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nf.co.markyourspace.markyourspace.searchSpaceFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textStartDate"
        android:layout_marginTop="20dp"
        android:id="@+id/textViewStartDateSearchSpace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textStartHour"
        android:id="@+id/textViewStartHourSearchSpace"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewStartDateSearchSpace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textEndDate"
        android:id="@+id/textViewEndDateSearchSpace"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewStartHourSearchSpace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textEndHour"
        android:id="@+id/textViewEndHourSearchSpace"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewEndDateSearchSpace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/numberOfSeats"
        android:id="@+id/textViewNumbSeatsSearchSpace"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewEndHourSearchSpace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Activities"
        android:id="@+id/textView7"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textViewNumbSeatsSearchSpace"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Features"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#FFFFFF"
        android:background="#552CA3"
        android:layout_above="@+id/button1"
        android:layout_alignLeft="@+id/button1"
        android:layout_alignStart="@+id/button1"
        android:layout_marginBottom="10dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_cancel"
        android:id="@+id/button1"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="#FFFFFF"
        android:background="#552CA3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editStartDateSearchSpace"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textViewStartDateSearchSpace"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/textViewStartHourSearchSpace" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editStartHourSearchSpace"
        android:layout_alignBottom="@+id/textViewStartHourSearchSpace"
        android:layout_toRightOf="@+id/textViewStartHourSearchSpace"
        android:layout_alignRight="@+id/editStartDateSearchSpace"
        android:layout_alignEnd="@+id/editStartDateSearchSpace" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editEndDateSearchSpace"
        android:layout_alignBottom="@+id/textViewEndDateSearchSpace"
        android:layout_toRightOf="@+id/textViewEndDateSearchSpace"
        android:layout_alignRight="@+id/editStartHourSearchSpace"
        android:layout_alignEnd="@+id/editStartHourSearchSpace" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/editEndHourSearchSpace"
    android:layout_alignBottom="@+id/textViewEndHourSearchSpace"
    android:layout_toRightOf="@+id/textViewEndDateSearchSpace"
    android:layout_alignRight="@+id/editEndDateSearchSpace"
    android:layout_alignEnd="@+id/editEndDateSearchSpace" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editNofSeatsSearchSpace"
        android:layout_alignBottom="@+id/textViewNumbSeatsSearchSpace"
        android:layout_alignRight="@+id/editEndHourSearchSpace"
        android:layout_alignEnd="@+id/editEndHourSearchSpace"
        android:layout_toRightOf="@+id/textViewNumbSeatsSearchSpace"
        android:layout_toEndOf="@+id/textViewNumbSeatsSearchSpace" />



</RelativeLayout>
